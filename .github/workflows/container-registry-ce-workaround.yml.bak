name: Deploy logstream on CE

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

# https://docs.github.com/en/enterprise-cloud@latest/actions/learn-github-actions/environment-variables#default-environment-variables
env:
  LOCAL_DECLARATION: /home/cyber/declaration.json
  FAAS_APP_NAME: logstream-xc
  GITHUB_BASE_REF: master
  DOCKERFILE_PATH: ./build-ce-workaround

jobs:

  build_and_push:

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - name: Build the Docker image
        run: docker build . --file ${DOCKERFILE_PATH}/Dockerfile --tag registry.gitlab.com/nergalex/f5-xc-logstream/logstream-xc:${GITHUB_RUN_ID} \
        --build-arg GITHUB_REPOSITORY=${{ github.repository }} \
        --build-arg FAAS_APP_NAME=${{ env.FAAS_APP_NAME }} \
        --build-arg GITHUB_BASE_REF=${{ env.GITHUB_BASE_REF }} \
        --build-arg LOGSTREAM_XC_PEM_PRIVATE_KEYS=${{ secrets.LOGSTREAM_XC_PEM_PRIVATE_KEYS }}

      - name: Push image to Container Registry
        run: docker login registry.gitlab.com -u ${{ secrets.GITLAB_CR_USERNAME }} -p ${{ secrets.GITLAB_CR_TOKEN }} \
        && docker push registry.gitlab.com/nergalex/f5-xc-logstream/logstream-xc:${GITHUB_RUN_ID}





